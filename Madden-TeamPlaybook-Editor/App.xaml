<Application 
    x:Class="Madden20PlaybookEditor.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#0A3161</Color>
            <Color x:Key="Secondary">#B31942</Color>
            <Color x:Key="Tertiary">#FFFFFF</Color>
            <Color x:Key="Quaternary">#FFFFFF</Color>
            <Color x:Key="Quinary">#FFFFFF</Color>
            <Color x:Key="Senary">#FFFFFF</Color>
            <Color x:Key="Undefined">#00000000</Color>
            <Color x:Key="Block">#c8c8c8</Color>
            <Color x:Key="BaseRoute">#c3b152</Color>
            <Color x:Key="PrimaryRoute">#db4155</Color>
            <Color x:Key="DelayRoute">#346ff7</Color>
            <Color x:Key="MotionRoute">#9ce3f1</Color>
            <Color x:Key="Run">#db4155</Color>
            <Color x:Key="QBScramble">#13e884</Color>
            <Color x:Key="QBHandoff">#db4155</Color>
            <Color x:Key="Kickoff">#db4155</Color>
            <Color x:Key="CloudFlat">#08c2db</Color>
            <Color x:Key="HardFlat">#5aa3aa</Color>
            <Color x:Key="SoftSquat">#99eaf4</Color>
            <Color x:Key="MidRead">#a5bd6b</Color>
            <Color x:Key="ThreeReceiverHook">#dbf39f</Color>
            <Color x:Key="HookCurl">#e7efc0</Color>
            <Color x:Key="VertHook">#d6e394</Color>
            <Color x:Key="CurlFlat">#913ede</Color>
            <Color x:Key="SeamFlat">#bd80f5</Color>
            <Color x:Key="QuarterFlat">#ffb6f7</Color>
            <Color x:Key="DeepZone">#316df7</Color>
            <Color x:Key="QBSpy">#c87810</Color>
            <Color x:Key="RushQB">#db4155</Color>
            <SolidColorBrush x:Key="BaseBrush"
                     Color="Black" Opacity="0.333"/>
            <SolidColorBrush x:Key="PrimaryBrush"
                     Color="{DynamicResource Primary}" />
            <SolidColorBrush x:Key="SecondaryBrush"
                     Color="{DynamicResource Secondary}" />
            <SolidColorBrush x:Key="TertiaryBrush"
                     Color="{DynamicResource Tertiary}" Opacity="0.7"/>
            <SolidColorBrush x:Key="QuaternaryBrush"
                     Color="{DynamicResource Quaternary}" />
            <SolidColorBrush x:Key="QuinaryBrush"
                     Color="{DynamicResource Quinary}" />
            <SolidColorBrush x:Key="SenaryBrush"
                     Color="{DynamicResource Senary}"/>
            <SolidColorBrush x:Key="BorderBrush"
                     Color="{DynamicResource Primary}" Opacity="0.333"/>
            <LinearGradientBrush x:Key="GradientBrush" StartPoint="0.5,1" EndPoint="0.5,0" Opacity="0.333">
                <GradientStop Offset=".333" Color="{DynamicResource Primary}"/>
                <GradientStop Offset="1" Color="{DynamicResource Secondary}"/>
            </LinearGradientBrush>
            <SolidColorBrush x:Key="UndefinedBrush"
                     Color="{DynamicResource Undefined}" Opacity="0.1"/>
            <SolidColorBrush x:Key="BlockBrush"
                     Color="{DynamicResource Block}" Opacity="0.1"/>
            <SolidColorBrush x:Key="BaseRouteBrush"
                     Color="{DynamicResource BaseRoute}" Opacity="0.1"/>
            <SolidColorBrush x:Key="PrimaryRouteBrush"
                     Color="{DynamicResource PrimaryRoute}" Opacity="0.1"/>
            <SolidColorBrush x:Key="DelayRouteBrush"
                     Color="{DynamicResource DelayRoute}" Opacity="0.1"/>
            <SolidColorBrush x:Key="MotionRouteBrush"
                     Color="{DynamicResource MotionRoute}" Opacity="0.1"/>
            <SolidColorBrush x:Key="RunBrush"
                     Color="{DynamicResource Run}" Opacity="0.1"/>
            <SolidColorBrush x:Key="QBScrambleBrush"
                     Color="{DynamicResource QBScramble}" Opacity="0.1"/>
            <SolidColorBrush x:Key="QBHandoffBrush"
                     Color="{DynamicResource QBHandoff}" Opacity="0.1"/>
            <SolidColorBrush x:Key="KickoffBrush"
                     Color="{DynamicResource Kickoff}" Opacity="0.1"/>
            <SolidColorBrush x:Key="CloudFlatBrush"
                     Color="{DynamicResource CloudFlat}" Opacity="0.1"/>
            <SolidColorBrush x:Key="HardFlatBrush"
                     Color="{DynamicResource HardFlat}" Opacity="0.1"/>
            <SolidColorBrush x:Key="SoftSquatBrush"
                     Color="{DynamicResource SoftSquat}" Opacity="0.1"/>
            <SolidColorBrush x:Key="MidReadBrush"
                     Color="{DynamicResource MidRead}" Opacity="0.1"/>
            <SolidColorBrush x:Key="ThreeReceiverHookBrush"
                     Color="{DynamicResource ThreeReceiverHook}" Opacity="0.1"/>
            <SolidColorBrush x:Key="HookCurlBrush"
                     Color="{DynamicResource HookCurl}" Opacity="0.1"/>
            <SolidColorBrush x:Key="VertHookBrush"
                     Color="{DynamicResource VertHook}" Opacity="0.1"/>
            <SolidColorBrush x:Key="CurlFlatBrush"
                     Color="{DynamicResource CurlFlat}" Opacity="0.1"/>
            <SolidColorBrush x:Key="SeamFlatBrush"
                     Color="{DynamicResource SeamFlat}" Opacity="0.1"/>
            <SolidColorBrush x:Key="QuarterFlatBrush"
                     Color="{DynamicResource QuarterFlat}" Opacity="0.1"/>
            <SolidColorBrush x:Key="DeepZoneBrush"
                     Color="{DynamicResource DeepZone}" Opacity="0.1"/>
            <SolidColorBrush x:Key="QBSpyBrush"
                     Color="{DynamicResource QBSpy}" Opacity="0.1"/>
            <SolidColorBrush x:Key="RushQBBrush"
                     Color="{DynamicResource RushQB}" Opacity="0.1"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/sbrTeamColorStyle.xaml" />
                <ResourceDictionary Source="/Styles/tciTeamColorStyle.xaml" />
                <ResourceDictionary Source="/Styles/lviTeamColorStyle.xaml" />
                <ResourceDictionary Source="/Styles/tviTeamColorStyle.xaml" />
                <ResourceDictionary Source="/Styles/FormationTabItemStyle.xaml" />
                <ResourceDictionary Source="/Styles/SubFormationTabItemStyle.xaml" /> 
                <ResourceDictionary Source="/Styles/tviFieldStyle.xaml" />
                <ResourceDictionary Source="/Styles/PlayTabItemStyle.xaml" />
                <ResourceDictionary Source="/Styles/SituationStyle.xaml" />
                <ResourceDictionary Source="/Styles/AudibleDeep.xaml" />
                <ResourceDictionary Source="/Styles/AudibleFake.xaml" />
                <ResourceDictionary Source="/Styles/AudibleQuick.xaml" />
                <ResourceDictionary Source="/Styles/AudibleRun.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>