<UserControl 
    x:Class="MaddenTeamPlaybookEditor.User_Controls.PSAL_Editor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:UserControls="clr-namespace:MaddenTeamPlaybookEditor.User_Controls"
    mc:Ignorable="d"
    x:Name="uclPSALEditor"
    Background="{DynamicResource BackgroundBrush}"
    >

    <Grid Height="Auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Canvas Grid.Row="0"
            Name="PSAL_Canvas" 
            Width="533"
            Height="1048"
            Margin="0,-100.5"
            MouseDown="PSAL_Canvas_MouseDown" 
            MouseMove="PSAL_Canvas_MouseMove"
            MouseUp="PSAL_Canvas_MouseUp"
            OpacityMask="{StaticResource FieldBrush}"
            Background="{DynamicResource TextBrush}"
            >
        </Canvas>
        
        <UserControls:PlayerIcon />

        <DataGrid Grid.Row="1"
            x:Name="PSAL_List"
            ItemsSource="{Binding PSAL}"
            CanUserAddRows="True"
            CanUserDeleteRows="True"
            />
    </Grid>
</UserControl>
