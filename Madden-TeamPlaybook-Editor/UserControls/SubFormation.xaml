        <Canvas Grid.Row="2"
            x:Name="cvsSubFormation"
            Width="144"
            Height="48"
            HorizontalAlignment="Stretch">

            <ItemsControl
                IsEnabled="False"
                x:Name="iclPlayers"
                ItemsSource="{Binding CurrentPackage}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas 
                            x:Name="cvsSubFormation"
                            Width="360" 
                            Height="120"
                        />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <UserControls:PlayerIcon
                            x:Name="clnIcon"
                            Player="{Binding}"
                            Scale="2.5"
                            ShowPosition="True"
                            AbsolutePositioning="True"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemContainerStyle>
                    <Style>
                        <Setter 
                            Property="Canvas.Left" 
                            Value="{Binding fmtx}"/>
                        <Setter 
                            Property="Canvas.Top" 
                            Value="{Binding fmty}"/>
                    </Style>
                </ItemsControl.ItemContainerStyle>
                <ItemsControl.LayoutTransform>
                    <ScaleTransform 
                        ScaleX=".4"
                        ScaleY=".4"/>
