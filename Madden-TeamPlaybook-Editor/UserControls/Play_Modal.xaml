                                        <CheckBox Content="Snap To Primary" IsChecked="{Binding SnapToVIP, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                </Grid>
                            </ScrollViewer>                        
                        </GroupBox>
