        <Expander ExpandDirection="Right">
        
            <TabControl 
                x:Name="tclTables" 
                Background="{x:Null}" 
                BorderBrush="{x:Null}" 
                Foreground="{x:Null}" 
                DockPanel.Dock="Top"
                >

                <TabItem Header="PBFM">
                    <UserControls:PBFMTable
                            x:Name="uclPBFMTable"
                            PBFM="{Binding PBFM, Mode=TwoWay}"/>
                </TabItem>

                <TabItem Header="FORM">
                    <UserControls:FORMTable 
                            x:Name="uclFORMTable" 
                            FORM="{Binding FORM, Mode=TwoWay}"/>
                </TabItem>

                <TabItem Header="PBST">
                    <UserControls:PBSTTable 
                            x:Name="uclPBSTTable" 
                            PBST="{Binding PBST, Mode=TwoWay}"/>
                </TabItem>

                <TabItem Header="SETL">
                    <UserControls:SETLTable 
                            x:Name="uclSETLTable" 
                            SETL="{Binding SETL, Mode=TwoWay}"/>
                </TabItem>

                <TabItem Header="SETP">
                    <UserControls:SETPTable 
                            x:Name="uclSETPTable" 
                            SETP="{Binding SETP, Mode=TwoWay}"/>
                </TabItem>

                <TabItem Header="SPKF">
                    <UserControls:SPKFTable 
                            x:Name="uclSPKFTable" 
                            SPKF="{Binding SPKF, Mode=TwoWay}"/>
                </TabItem>

                <TabItem Header="SPKG">
                    <UserControls:SPKGTable 
                            x:Name="uclSPKGTable" 
                            SPKG="{Binding SPKG, Mode=TwoWay}"/>
                </TabItem>

                <TabItem Header="SGFM">
                    <UserControls:SGFMTable 
                            x:Name="uclSGFMTable" 
                            SGFM="{Binding SGFM, Mode=TwoWay}"/>
                </TabItem>

                <TabItem Header="SETG">
                    <UserControls:SETGTable 
                        x:Name="uclSETGTable" 
                        SETG="{Binding SETG, Mode=TwoWay}"/>
                </TabItem>

                <TabItem Header="PBPL">
                    <UserControls:PBPLTable 
                            x:Name="uclPBPLTable" 
                            PBPL="{Binding PBPL, Mode=TwoWay}"/>
                </TabItem>

                <TabItem Header="PLYL">
                    <UserControls:PLYLTable 
                            x:Name="uclPLYLTable" 
                            PLYL="{Binding PLYL, Mode=TwoWay}"/>
                </TabItem>

                <TabItem Header="PLPD">
                    <UserControls:PLPDTable 
                            x:Name="uclPLPDTable" 
                            PLPD="{Binding PLPD, Mode=TwoWay}"/>
                </TabItem>

                <TabItem Header="PLRD">
                    <UserControls:PLRDTable 
                            x:Name="uclPLRDTable" 
                            PLRD="{Binding PLRD, Mode=TwoWay}"/>
                </TabItem>

