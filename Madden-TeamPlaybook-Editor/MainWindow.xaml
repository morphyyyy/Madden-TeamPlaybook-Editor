                            PSAL="{Binding PSAL, Mode=TwoWay}"/>
                </TabItem>

                <TabItem Header="ARTL">
                    <UserControls:ARTLTable 
                            x:Name="uclARTLTable" 
                            ARTL="{Binding ARTL, Mode=TwoWay}"/>
                </TabItem>

                <TabItem Header="PBAI">
                    <UserControls:PBAITable 
                            x:Name="uclPBAITable" 
                            PBAI="{Binding PBAI, Mode=TwoWay}"/>
                </TabItem>

                <TabItem Header="PBAU">
                    <UserControls:PBAUTable 
                            x:Name="uclPBAUTable" 
                            PBAU="{Binding PBAU, Mode=TwoWay}"/>
                </TabItem>

                <TabItem Header="PBCC">
